{
  "name": "gql-cache",
  "version": "0.1.1",
  "description": "A library for normalizing and denormalizing GraphQL responses",
  "main": "lib/index.js",
  "types": "lib/index",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dividab/gql-cache.git"
  },
  "keywords": [
    "graphql",
    "cache",
    "normalization"
  ],
  "author": "Jonas Kello <jonas.kello@divid.se>",
  "license": "MIT",
  "devDependencies": {
    "@types/graphql": "^0.13.0",
    "@types/tape": "^4.2.32",
    "coveralls": "^3.0.1",
    "graphql": "^0.13.0",
    "graphql-tag": "^2.9.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.2",
    "rimraf": "^2.6.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "ts-node": "^6.1.0",
    "tslint": "^5.1.0",
    "tslint-immutable": "^4.5.0",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "lint": "tslint --config ./tslint.json -- './packages/*/src/**/*.ts{,x}'",
    "build": "rimraf lib && tsc -p src",
    "test": "tape --require ts-node/register \"test/**/*.ts\" | tap-spec",
    "test:work": "tape --require ts-node/register \"test/normalization/denormalize-tests.ts\" | tap-spec",
    "verify": "yarn lint && yarn build && yarn coverage",
    "publish-npm": "yarn verify && lerna publish",
    "precommit": "lint-staged",
    "coverage": "rimraf coverage .nyc_output && nyc yarn test",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ]
  }
}
