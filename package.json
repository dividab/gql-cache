{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/tape": "^4.2.32",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "prettier": "^1.13.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "ts-node": "^6.1.0",
    "tslint": "^5.1.0",
    "tslint-immutable": "^4.5.0",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "lint": "tslint --config ./tslint.json -- './packages/*/src/**/*.ts{,x}'",
    "build": "lerna run build",
    "test": "lerna run test",
    "verify": "yarn lint && yarn build && yarn test",
    "publish-npm": "yarn verify && lerna publish",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
